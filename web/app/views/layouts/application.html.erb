              <li class="nav-item"> <a class="nav-link" href="http://fraternitedupiranha.com/reglements/">Réglements</a> </li>
              <li class="nav-item"> <a class="nav-link" href="http://fraternitedupiranha.com/mission/">Mission</a> </li>
              <li class="nav-item"> <a class="nav-link" href="http://fraternitedupiranha.com/ecussons/">Emplacement</a> </li>
            </ul>
          </div>
        </nav>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>

  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</html>
