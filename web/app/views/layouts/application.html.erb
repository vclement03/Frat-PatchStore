<!DOCTYPE html>
<html>
  <head>
    <title>Fraternité du Piranha - PatchETS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- FAVICON -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/logo_frat.png">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-csv/0.71/jquery.csv-0.71.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
          <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to 'Commande', new_order_path, class: 'nav-link' %>
            </li>
            <% if is_admin? %> 
              <li class="nav-item">
                <%= link_to 'Admin', admin_path, class: 'nav-link' %> 
              </li>
            <% end %>
          </ul>
          
          </div>
        <!-- 
          <a class="navbar-brand" href="http://fraternitedupiranha.com/"> <img src="/assets/logo_frat.png" alt="Fraternité du piranha" height="100px"> </a>
          <a class="nav-link" href="http://fraternitedupiranha.com/">Accueil</a>
          <a class="nav-link" href="http://fraternitedupiranha.com/commanditaire/">Commanditaires</a>
          <a class="nav-link" href="http://fraternitedupiranha.com/ecussons-2/">Écussons</a>
          <a class="nav-link" href="http://fraternitedupiranha.com/reglements/">Réglements</a>
          <a class="nav-link" href="http://fraternitedupiranha.com/mission/">Mission</a>
          <a class="nav-link" href="http://fraternitedupiranha.com/ecussons/">Emplacement</a>
          -->
          <ul class="navbar-nav ml-auto">
            <% if !user_signed_in? %> 
              <li class="nav-item">
                <%= link_to 'Enregistrer', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
            <%if !user_signed_in?%>
              <li class="nav-item">
                <%= link_to 'Connexion', new_user_session_path, class: 'nav-link' %> 
              </li>
            <% end %>
            <%if user_signed_in?%>
              <li class="navbar-text">
                <%= current_user.email%>
              </li>
            <% end %>
            <%if user_signed_in?%>
              <li class="nav-item">
                <%= link_to 'Déconnexion', destroy_user_session_path, class: 'nav-link', :method => 'delete' %> 
              </li>
            <% end %>
          </ul>
        </nav>

    <div class="container">
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
      <%= yield %>
    </div>
  </body>

</html>
