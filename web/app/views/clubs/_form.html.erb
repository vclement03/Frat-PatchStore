<%= form_with(model: club, local: true) do |form| %>
  <% if club.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(club.errors.count, "error") %> prohibited this club from being saved:</h2>

      <ul>
      <% club.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :value_type %>
    <%= form.select :value_type, Club.value_types.keys, { selected: club.value_type } %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.text_field :start_date, type: 'date' %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.text_field :end_date, type: 'date' %>
  </div>

  <div class="field">
    <%= form.label :patch_types %>
    <%= form.select :patch_types, PatchType.all.map { |p| [p.name, p.id] }, { selected: club.patch_types.pluck(:id) }, { multiple: true } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
