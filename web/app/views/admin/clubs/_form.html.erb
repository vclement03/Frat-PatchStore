<%= form_with(model: club, url: club_url,  local: true) do |form| %>
  <%=render 'shared/errors', object: club %>
  
  <div class="form-group row">
    <label class="col-3 col-form-label">Nom du regroupement</label>
    <div class="col-7">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-3 col-form-label">Type de regroupement</label>
    <div class="col-4">
      <%= form.collection_select :patch_type_id, PatchType.all, :id, :name, {prompt: 'Choisissez un type'}  %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-3 col-form-label">Type d'implication</label>
    <div class="col-4">
      <%= form.select :value_type, Club.value_types.keys, { selected: @club.value_type } , { class: 'form-control' }%>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-3 col-form-label">Date de cr√©ation</label>
    <div class="col-4">
      <%= form.text_field :start_date, class: 'form-control datepicker' %>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-3 col-form-label">Date de fermeture</label>
    <div class="col-4">
      <%= form.text_field :end_date, class: 'form-control datepicker' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-xs-12 col-md-12 col-lg-12 aRight">
      <%= link_to 'Annuler', admin_clubs_path, class: 'btn btn-danger btn-sm' %>
      <%= form.submit class: 'btn btn-success btn-sm'%>
    </div>
  </div>

<%end%>
