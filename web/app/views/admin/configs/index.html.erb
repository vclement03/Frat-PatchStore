<p id="notice"><%= notice %></p>

<%= render partial: "layouts/admin_nav"%>

<div id="content">
<h1>Configs</h1>

<table id="groups" class="table table-striped table-bordered table-sm" style="width:100%">
  <thead>
    <tr>
      <th>Key</th>
      <th>Value</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @configs.each do |config| %>
      <tr>
        <td><%= config.key %></td>
        <td><%= config.value %></td>
        <td><%= config.description %></td>
        <td><%= link_to 'Show', admin_config_path(config) %></td>
        <td><%= link_to 'Edit', edit_admin_config_path(config) %></td>
        <td><%= link_to 'Destroy', admin_config_path(config), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Config', new_admin_config_path %>

</div>
