<h1>Admin</h1>

<ul>
  <li><%= link_to "#{@order_max} commandes en attente de confirmation", admin_orders_path %></li>
  <li><%= link_to "#{@order_count} commandes confirmés", admin_form_path %></li>
</ul>

<%= render partial: "layouts/admin_nav"%>

<div id="content">
  <div class="container mb-5 whiteContainer">
    <div class="row">
      <div class="col-xs-12 col-md-12 col-lg-12 mb-5">
        <h2>Tableau de bord</h2>
      </div>
    </div>

    <div class="row mb-5" style="border-bottom:1px solid">
      <div class="col-xs-12 col-md-3 col-lg-3">
        <div class="infoBox">
          <p><span class="emphasis" ><%= link_to "#{@order_max}", admin_orders_path %></span> <br> Nouvelle(s) demande(s)</p>
        </div>
      </div>

      <div class="col-xs-12 col-md-3 col-lg-3" style="background:#f5f5f5">
        <div class="infoBox">
          <p><span class="emphasis"><%= link_to "#{@order_count}" , admin_form_path %></span> <br> Demande(s) confirmée(s)</p>
        </div>
      </div>

      <div class="col-xs-12 col-md-3 col-lg-3">
        <div class="infoBox">
          <p><span class="emphasis">À coder après</span> <br> Écusson(s) au total</p>
        </div>
      </div>

      <div class="col-xs-12 col-md-3 col-lg-3" style="background:#f5f5f5">
        <div class="infoBox">
          <p><span class="emphasis">À Coder $</span> <br> D'écussons vendu</p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-md-10 col-lg-10" style="margin:auto;">
        <div class="form-group row">
          <label class="col-3 col-form-label">Fermeture des demandes</label>
          <div class="col-9">
            <input type="text" name="formClose" class="form-control datepicker" value="11 décembre 2018" />
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3 col-form-label">Prochaine commande</label>
          <div class="col-9">
            <input type="text" name="nextOrder" class="form-control datepicker" value="15 décembre 2018" />
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3 col-form-label">État du formulaire de demande</label>
          <div class="col-4">
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
              <label class="btn btn-light btn-sm active">
                <input type="radio" name="options" id="option1" autocomplete="off" checked> Actif
              </label>
              <label class="btn btn-light btn-sm">
                <input type="radio" name="options" id="option2" autocomplete="off"> Inactif
              </label>
            </div>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-3 col-form-label">Courriel du fournisseur</label>
          <div class="col-9">
            <input type="text" name="providerEmail" class="form-control" value="fournisseur@fournisseur.ca" />
          </div>
        </div>

        <div class="form-group row">
          <div class="col-12 aRight">
            <input type="submit" class="btn btn-success btn-sm" value="Enregistrer les configurations" />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>